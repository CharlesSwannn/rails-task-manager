<h2><%= @task.title %></h2>

<h4><%= link_to "Edit this task", edit_path %></h4>
<ul>
<li>
<%= @task.details %>
</li>
<li>
<%= @task.completed %>
</li>
</ul>
<p><%= link_to "Go back", tasks_path %></p>

<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
